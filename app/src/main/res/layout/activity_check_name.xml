<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="40dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/activity_check_name_editor"
        android:layout_width="match_parent"
        android:hint="@string/activity_check_name_edit_text_editor"
        android:layout_height="45dp"/>

    <TextView
        android:id="@+id/activity_check_name_status"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <Button
        android:id="@+id/activity_check_name_check"
        android:layout_width="100dp"
        android:text="@string/activity_check_name_button_check"
        android:layout_height="45dp"/>
</LinearLayout>